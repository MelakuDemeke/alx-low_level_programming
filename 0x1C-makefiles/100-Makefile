CC = gcc
SRC = main.c school.c
OBJ = $(SRC:.c=.o)
NAME = school
RM = rm -f
CFLAGS = -Wall -Werror -Wextra -pedantic

.PHONY: all clean oclean fclean re

all: $(NAME)

$(NAME): $(OBJ)
	$(CC) $(CFLAGS) $(OBJ) -o $(NAME)

clean:
	$(RM) $(OBJ) $(NAME) *~ \#*\#

oclean:
	$(RM) $(OBJ)

fclean: clean

re: fclean all

$(OBJ): %.o: %.c m.h
	$(CC) $(CFLAGS) -c $< -o $@
